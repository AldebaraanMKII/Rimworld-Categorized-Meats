<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Rimcraft -->

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>[Ry]Rimcraft Animals</li>
    </mods>
	<match Class="PatchOperationSequence">
	<operations>
	
	
<!-- Canine -->
   <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[
	  	  defName="WoW_Animal_Direwolf" or
	  	  defName="WoW_Animal_Frostwolf" or
	  	  defName="WoW_Animal_Mastiff" 
	  ]/race</xpath>
      <value>
         <useMeatFrom>Wolf_Timber</useMeatFrom>
      </value>
   </li>
	
	

<!-- Bird -->
   <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[
	  	  defName="WoW_Animal_Dragonhawk" or
	  	  defName="WoW_Animal_Hawkstrider" or
	  	  defName="WoW_Animal_Voidstrider" 
	  ]/race</xpath>
      <value>
         <useMeatFrom>Cassowary</useMeatFrom>
      </value>
   </li>
	

<!-- Elephant -->
   <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[
	  	  defName="WoW_Animal_Elekk" 
	  ]/race</xpath>
      <value>
         <useMeatFrom>Elephant</useMeatFrom>
      </value>
   </li>
	


<!-- Reptile -->
    <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[ 
	  	  defName="WoW_Animal_FairyDragon" or
	  	  defName="WoW_Animal_Kodo" or
	  	  defName="WoW_Animal_Murloc" or
	  	  defName="WoW_Animal_Raptor" 
	  ]/race</xpath> 
     <value>
          <useMeatFrom>Tortoise</useMeatFrom> 
       </value> 
    </li> 



<!-- Feline -->
    <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[ 
	  	  defName="WoW_Animal_Frostsaber" or
	  	  defName="WoW_Animal_Manasaber" or
	  	  defName="WoW_Animal_Nightsaber"
	  ]/race</xpath> 
     <value>
          <useMeatFrom>Cougar</useMeatFrom> 
       </value> 
    </li> 



<!-- Equine -->
    <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[ 
	  	  defName="WoW_Animal_Horse" or
	  	  defName="WoW_Animal_Unicorn" 
	  ]/race</xpath> 
     <value>
          <useMeatFrom>Horse</useMeatFrom> 
       </value> 
    </li> 



<!-- Goat -->
    <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[ 
	  	  defName="WoW_Animal_Ram" 
	  ]/race</xpath> 
     <value>
          <useMeatFrom>Goat</useMeatFrom> 
       </value> 
    </li> 



<!-- Venison -->
    <li Class="PatchOperationAdd">
	  <xpath>Defs/ThingDef[ 
	  	  defName="WoW_Animal_Talbuk" 
	  ]/race</xpath> 
     <value>
          <useMeatFrom>Deer</useMeatFrom> 
       </value> 
    </li> 





	</operations>
	</match>
</Operation>
</Patch>